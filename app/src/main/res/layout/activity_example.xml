<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ExampleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/cardview_dark_background"
            android:orientation="vertical"
            android:showDividers="middle|end">

            <com.jacee.widget.PreferenceView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceDesc="one desc"
                app:preferenceTitle="one" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceDesc="two desc"
                app:preferenceDescColor="@android:color/holo_red_dark"
                app:preferenceTitle="two" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceDesc="three desc"
                app:preferenceDescColor="@android:color/holo_blue_light"
                app:preferenceDescSize="10sp"
                app:preferenceStateIcon="@drawable/ic_baseline_arrow_forward_24"
                app:preferenceTitle="three"
                app:preferenceTitleColor="@android:color/holo_green_dark"
                app:preferenceTitleLabel="@drawable/ic_version_new"
                app:preferenceTitleSize="20sp" />

            <com.jacee.widget.PreferenceView
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceTitle="four"
                app:preferenceType="switcher" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceIcon="@drawable/ic_baseline_album_24"
                app:preferenceSwitchExpanded="true"
                app:preferenceTitle="five"
                app:preferenceType="switcher" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceDesc="six desc"
                app:preferenceDescColor="@android:color/holo_blue_light"
                app:preferenceDescSize="10sp"
                app:preferenceIcon="@drawable/ic_baseline_album_24"
                app:preferenceStateIcon="@drawable/ic_baseline_arrow_forward_24"
                app:preferenceStateIconTint="@android:color/holo_red_dark"
                app:preferenceTitle="six"
                app:preferenceTitleColor="@android:color/holo_green_dark"
                app:preferenceTitleLabel="@drawable/ic_version_new"
                app:preferenceTitleSize="20sp" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceDesc="seven desc"
                app:preferencePaddingLeft="40dp"
                app:preferencePaddingRight="0dp"
                app:preferenceTitle="seven" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceIcon="@drawable/ic_baseline_album_24"
                app:preferencePaddingLeft="40dp"
                app:preferencePaddingRight="@dimen/preference_padding_lr"
                app:preferenceTitle="eight"
                app:preferenceType="switcher" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceIcon="@drawable/ic_baseline_album_24"
                app:preferenceIconPadding="0dp"
                app:preferenceStateIcon="@drawable/ic_baseline_arrow_forward_24"
                app:preferenceTitle="nine" />

            <com.jacee.widget.PreferenceView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:preferenceIcon="@drawable/ic_baseline_album_24"
                app:preferenceIconPadding="0dp"
                app:preferencePaddingLeft="0dp"
                app:preferencePaddingRight="0dp"
                app:preferenceStateIcon="@drawable/ic_baseline_arrow_forward_24"
                app:preferenceTitle="ten" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>